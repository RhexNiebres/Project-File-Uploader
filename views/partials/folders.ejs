<h1>Create Folders</h1>
<form action="/folders/create" method="POST">
  <input type="text" name="name" placeholder="New Folder Name" required />
  <button type="submit">Create</button>
</form>

<h2>Your Folders</h2>
<ul>
  <% folders.forEach(folder => { %>
    <li>
      <a href="/folders/<%= folder.id %>"><%= folder.name %></a> 
      <form action="/folders/delete/<%= folder.id %>" method="POST" style="display:inline;">
        <button type="submit">delete</button>
      </form>
    </li>
  <% }); %>
</ul>

